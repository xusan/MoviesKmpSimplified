<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainTheme" parent="Theme.Material3.Light">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorPrimary">#2196F3</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#1976D2</item>
        <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
        <item name="colorAccent">#1989FC</item>

        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">#2196F3</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="HeaderStyle">
        <item name="android:background">@color/Gray300</item>
    </style>

    <style name="PageStyle">
        <item name="android:background">@color/Gray100</item>
    </style>



    <style name="BaseColorButtonStyle" parent="Widget.Material3.Button">
        <item name="android:layout_height">55dp</item>
        <item name="android:minHeight">55dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PrimaryButtonStyle" parent="BaseColorButtonStyle">
        <item name="backgroundTint">@drawable/bg_btn_primary_selector</item>
    </style>


    <style name="IconButtonStyle" parent="Widget.Material3.Button.IconButton">
        <item name="iconTint">@color/LabelColor</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconSize">25dp</item>
    </style>

    <style name="editTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/bg_edit_text_selector</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="baseLabel">
        <item name="android:textColor">@color/LabelColor</item>
    </style>

    <style name="pageTitleStyle" parent="baseLabel">
        <item name="fontFamily">@font/senbold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
    </style>
</resources>